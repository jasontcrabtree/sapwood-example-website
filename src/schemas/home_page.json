{
  "Main": {
    "uid": {
      "type": "UID",
      "config": {
        "label": "Page URL Identifier",
        "placeholder": "Page URL Label"
      }
    },
    "homepage_title": {
      "type": "StructuredText",
      "config": {
        "single": "heading1",
        "label": "Homepage Title",
        "placeholder": "Homepage Main Caption"
      }
    },
    "homepage_paragraph": {
      "type": "StructuredText",
      "config": {
        "multi": "paragraph, preformatted, heading2, heading3, heading4, heading5, heading6, strong, em, hyperlink, image, embed, list-item, o-list-item, rtl",
        "label": "Homepage Paragraph",
        "placeholder": "Homepage Rich Text Paragraph"
      }
    },
    "body": {
      "type": "Slices",
      "fieldset": "Slice zone",
      "config": {
        "labels": {},
        "choices": {
          "page_title_block": {
            "type": "Slice",
            "fieldset": "Page Title Block",
            "description": "A Page Title with Different Display Styles",
            "icon": "title",
            "display": "list",
            "non-repeat": {
              "main_page_title": {
                "type": "Text",
                "config": {
                  "label": "Main Page Title",
                  "placeholder": "Page Title"
                }
              },
              "heading_size": {
                "type": "Select",
                "config": {
                  "options": [
                    "Page Title - H1",
                    "Section Title - H2",
                    "Element Title - H3",
                    "Content Title - H4",
                    "Subtitle - H5"
                  ],
                  "default_value": "Page Title - H1",
                  "label": "Heading Size"
                }
              },
              "title_style": {
                "type": "Select",
                "config": {
                  "options": [
                    "Title One - Simple",
                    "Title Two - Dots",
                    "Title Three - Line",
                    "Title Four - Block",
                    "---",
                    "Hero Title One - Simple",
                    "Hero Title Two - Squares",
                    "Hero Title Three -  Line",
                    "Hero Title Four - Block"
                  ],
                  "default_value": "Title One - Simple",
                  "label": "Title Style"
                }
              },
              "text_alignment": {
                "type": "Boolean",
                "config": {
                  "placeholder_false": "Align Left",
                  "placeholder_true": "Align Centre",
                  "default_value": false,
                  "label": "Text Alignment"
                }
              }
            },
            "repeat": {}
          }
        }
      }
    }
  },
  "SEO": {
    "meta_title": {
      "type": "Text",
      "config": {
        "label": "Meta Title",
        "placeholder": "Meta title..."
      }
    },
    "meta_description": {
      "type": "Text",
      "config": {
        "label": "Meta Description",
        "placeholder": "Meta Description..."
      }
    },
    "custom_page_meta_image": {
      "type": "Image",
      "config": {
        "constraint": {
          "width": 1200,
          "height": 630
        },
        "thumbnails": [],
        "label": "Custom Page Meta Image"
      }
    }
  }
}