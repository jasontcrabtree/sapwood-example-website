              "title_style": {
                "type": "Select",
                "config": {
                  "options": [
                    "One — Line",
                    "Two — Dots",
                    "Three — Block",
                    "Four — Hero Standard",
                    "Five — Hero Dots",
                    "Six — Hero Line",
                    "Seven — Hero Block"
